@import 'jeet'
@import 'rupture'

@import 'box-sizing'
@import 'reset'
@import 'fonts'
@import 'icons'
@import 'mixins'
@import 'colors'
@import 'animations'
@import 'typography'

.container
  center(em(1140))

header
  background url('../images/desk.jpg')
  background-size cover
  color #fff
  height 540px
  min-height 540px
  position relative
  overflow hidden
  z-index 1
  &:after
    content '\20'
    position absolute
    bottom em(-20)
    left 0
    background $bgColor
    display block
    height em(60)
    width 100%
    transform scale(1.1) rotate(-1deg)
    z-index -1

  .teint
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background #000
    opacity 0.4
    z-index -1

  .container
    display table
    position relative
    height 100%
    width 100%

  #arrow
    background #fff
    border-radius 50%
    position absolute
    left 70%
    bottom 3px
    i
      color $mainColor
      font-size 64px
      display inline-block
      margin 0 auto
      animation bounce 3s ease infinite
      cursor pointer
      z-index 1

  #menu
    position absolute
    right 0
    top 50px
    +desktop()
      top 100px
    text-align right
    li
      display inline-block
      margin-right 10px
      a
        border 2px solid #fff
        border-radius 2px
        color #fff
        padding 5px 20px
        transition background .7s ease
        &:hover
          background #fff
          color $mainColor

  #infos
    display table-cell
    vertical-align middle
    text-align center
    height 100%
    h1
      font-size em(48)
      +tablet()
        font-size em(62)
      +desktop()
        font-size em(72)
      font-weight bold
      text-transform uppercase

    h2
      font-size em(20)
      +tablet()
        font-size em(22)
      +desktop()
        font-size em(24)

    ul
      margin-top 20px
      li
        display inline-block
        margin-right 5px
        position relative
        &:nth-child(1) a:hover
          background #cb2027
          border-color #cb2027
        &:nth-child(2) a:hover
          background #00aced
          border-color #00aced
        &:nth-child(3) a:hover
          background #007bb6
          border-color #007bb6
        &:nth-child(4) a:hover
          background #000
          border-color #000
        a
          border 2px solid #fff
          border-radius 2px
          font-size em(24)
          padding 5px
          display inline-block
          transition background,border-color .7s ease
          i
            display inline-block
        &:hover > span
          display block
        span
          display none
          position absolute
          top 60px
          left 0
          background #cb2027
          border-radius 2px
          padding 10px 20px
          z-index 1
          &:before
            content '\20'
            height 0
            width 0
            border-bottom 10px solid #cb2027
            border-left 10px solid transparent
            border-right 10px solid transparent
            position absolute
            top -10px
            left 15px



section
  padding 80px 0
  overflow hidden
  h2
    font-size em(64)
    font-weight bold
    text-transform uppercase
    letter-spacing -2px
    display inline-block
    position relative
    margin-bottom 60px
    color $darkTextColor
    &:after
      content "\20"
      width 120px
      height 5px
      background $mainColor
      position absolute
      bottom 0
      left 0

section:nth-child(even)
  background #fff

#about
  .split
    col(1)
    +desktop()
      col(.5)
    &:last-child
      position relative
      display none
      +desktop()
        height auto
        display block
    p
      font-size em(22)


  .circle
    background $mainColor
    border-radius 50%
    position absolute
    left 0
    height 500px
    width 500px
    top -185px

  li
    position absolute
    z-index 1
    color #fff
    font-weight bold
    text-shadow #fff 0 0 1px
    font-size em(32)
    &:nth-child(1)
      top 37px
      left 222px
    &:nth-child(2)
      top 175px
      left 150px
    &:nth-child(3)
      top 243px
      left 38px
    &:nth-child(4)
      top 140px
      left 256px
    &:nth-child(5)
      top 335px
      left 330px
    &:nth-child(6)
      top 385px
      left 168px
    &:nth-child(7)
      top 285px
      left 250px
    &:nth-child(8)
      top 235px
      left 303px
    &:nth-child(9)
      top 85px
      left 61px

  p
    color #677667
    margin-bottom 20px

#work
  ul
    text-align center
    margin 0 auto

  li
    stack()
    text-align center
    +above(em(550))
      col(1/2, uncycle:3, cycle: 2)
    +desktop()
      col(1/3, uncycle:2, cycle: 3)
    margin-bottom 3%
    overflow hidden
    position relative
    width 100%
    height 100%
    &:hover .overlay
      visibility visible
      background rgba(231, 76, 60, 0.9)
    &:hover img
      transform scale(1.1)
    img
      max-width 100%
      width 100%
      transition transform 0.8s ease
    .overlay
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      background transparent
      z-index 1
      visibility hidden
      transition background 1s ease
      h3
        text-align center
        color #fff
        text-transform uppercase
        font-weight bold
        font-size 20px
        position absolute
        top 50%
        left 50%
        margin-right -50%
        transform translate(-50%, -50%)
      

footer
  background #202020
  padding 20px 0
  color #909090
